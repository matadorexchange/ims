<% provide(:title, 'Members') %>
<h1>Create Member</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3" id="createMember">
    <%= form_for(@member) do |f| %>
      
     <%= f.label :first_name %>
      <%= f.text_field :first_name %>
      
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
      
      <%= f.label :sevens_id %>
      <%= f.text_field :sevens_id %>

      <%= f.label :login %>
      <%= f.text_field :login %>

      <%= f.label :source %>
      <%= f.select :source, options_from_collection_for_select(User.all, :id, :login) %>   

      <%= fields_for :rate do |r| %>
        <%= r.label :rate %>
        <%= r.number_field :rate %>
	<%= r.label :currency %>
        <%= r.select :currency, options_for_select([ "INR", "USD", "AED"]), :class => 'genForm_dropBox' %>
      <% end %>

      <%= f.label :master_agent_id%>
      <%= f.select :master_agent_id, options_from_collection_for_select(MasterAgent.all, :id, :login) %>

      <%= fields_for :member_status do |mss| %>
         <%= mss.label :status %>
	 <%= mss.select :status, options_for_select(["Active", "Inactive", "Suspended", "Closed"]) %>
      <% end %>
	<br/><br/>
      <%= f.submit "Create member", class: "btn btn-primary" %>
      <% end %>
  </div>
</div>
<br/><br/>
